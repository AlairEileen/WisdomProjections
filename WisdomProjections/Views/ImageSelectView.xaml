<Grid x:Class="WisdomProjections.Views.ImageSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WisdomProjections.Views"
             mc:Ignorable="d" 
             x:Name="GridRoot"
             d:DesignHeight="450" d:DesignWidth="800">
    <Image x:Name="ImagePreview" Width="{Binding ElementName=GridRoot ,Path=ActualWidth}" Height="{Binding ElementName=GridRoot ,Path=ActualHeight}"></Image>
    <Canvas x:Name="canvas"/>
</Grid>
